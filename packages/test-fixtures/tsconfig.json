{
  "files": [
    "index.ts"
  ],
  "compilerOptions": {
    "importHelpers": false,
    "module": "ES2015",
    "target": "ES2015",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // activated for issue #94
    // svelte requires this option
    "importsNotUsedAsValues": "error",

    "lib": [
      "es2017",
      "es2015.collection"
    ],
    "baseUrl": "./",
    "paths": {
      "@protobuf-ts/runtime": [
        "../runtime/"
      ]
    }
  }
}

